<h2>Menus</h2>

<div class="demo-group">
  <h5 class="demo-group__title">Bottom aligned</h5>

  <div class="demo-group__row">
    <div class="demo-group__component">
      <style scope>
        .container {
          position: relative;
          width: 200px;
        }
        .bar {
          box-sizing: border-box;
          background: #3F51B5;
          color: white;
          width: 100%;
          padding: 16px;
        }
        .background {
          background: white;
          height: 148px;
          width: 100%;
        }
      </style>
      <div class="mdl-shadow--2dp container">
        <div class="bar">
          {{#mdl-menu isBottomLeft=true}}
            {{#mdl-menu-item isRipple=true}}Some Action{{/mdl-menu-item}}
            {{#mdl-menu-item isFullBleedDivider=true}}Another Action{{/mdl-menu-item}}
            {{#mdl-menu-item isDisabled=true}}Disabled Action{{/mdl-menu-item}}
            {{#mdl-menu-item}}Yet Another Action{{/mdl-menu-item}}
          {{/mdl-menu}}
        </div>
        <div class="background"></div>
      </div>
    </div>

    <div class="demo-group__component">
      <style scope>
        .container {
          position: relative;
          width: 200px;
        }
        .bar {
          box-sizing: border-box;
          background: #3F51B5;
          color: white;
          width: 100%;
          padding: 16px;
        }
        .background {
          background: white;
          height: 148px;
          width: 100%;
        }
        .bar .right {
          text-align: right;
        }
      </style>
      <div class="mdl-shadow--2dp container">
        <div class="bar">
          {{#mdl-menu isBottomRight=true class="right"}}
            {{#mdl-menu-item isRipple=true}}Some Action{{/mdl-menu-item}}
            {{#mdl-menu-item isFullBleedDivider=true}}Another Action{{/mdl-menu-item}}
            {{#mdl-menu-item isDisabled=true}}Disabled Action{{/mdl-menu-item}}
            {{#mdl-menu-item}}Yet Another Action{{/mdl-menu-item}}
          {{/mdl-menu}}
        </div>
        <div class="background"></div>
      </div>
    </div>
  </div>

  <div class="demo-group__snippet">
    {{code-snippet name="menu-bottom-left.hbs"}}
    {{code-snippet name="menu-bottom-right.hbs"}}
  </div>
</div>

