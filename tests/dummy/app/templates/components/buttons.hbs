<h2>Buttons</h2>

<div class="demo-group">
  <h5 class="demo-group__title">Colored FAB</h5>

  <div class="demo-group__row">
    <div class="demo-group__component">
      {{#mdl-button isColored=true isFab=true action=(action "logAction" "the 1st button is clicked")}}
        {{md-icon "add"}}
