{{!-- checked --}}
{{#mdl-radio "First" name="foo" value="first" groupValue=foo update=(action "radioAction")}}

{{!-- unchecked --}}
{{#mdl-radio "Second" name="foo" value="second" groupValue=foo update=(action "radioAction")}}

{{!-- disabled --}}
{{#mdl-radio "Disabled" name="foo" value="third" isDisabled=true}}

{{!-- radioAction --}}
actions: {
  radioAction(value) {
    set(this, 'foo', value);
    this.notifyPropertyChange('radioResult');
  }
}