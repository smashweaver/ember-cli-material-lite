{{!-- checked --}}
{{#mdl-checkbox isChecked=fruits.apple update=(action "checkboxAction" "apple")}}
  Apple
{{/mdl-checkbox}}

{{!-- unchecked --}}
{{#mdl-checkbox isChecked=fruits.banana update=(action "checkboxAction" "banana")}}
  Banana
{{/mdl-checkbox}}

{{!-- checked --}}
{{#mdl-checkbox isDisabled=true}}
  Citrus
{{/mdl-checkbox}}

{{!-- checkboxAction --}}
actions: {
  checkboxAction(key, value) {
    let fruits = get(this, 'fruits');
    set(fruits, key, value);
    this.notifyPropertyChange('checkboxResult');
  }
}