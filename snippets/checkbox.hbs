{{!-- checked --}}
{{mdl-checkbox "Apple" isChecked=fruits.apple update=(action "checkboxAction" "apple")}}

{{!-- unchecked --}}
{{mdl-checkbox "Banana" isChecked=fruits.banana update=(action "checkboxAction" "banana")}}

{{!-- checked --}}
{{mdl-checkbox "Citrus" isDisabled=true}}

{{!-- checkboxAction --}}
actions: {
  checkboxAction(key, value) {
    let fruits = get(this, 'fruits');
    set(fruits, key, value);
    this.notifyPropertyChange('checkboxResult');
  }
}